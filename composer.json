{
    "name": "univapay/php-sdk",
    "description": "PHP SDK for Univapay Payments",
    "type": "library",
    "keywords": ["univapay", "payment", "credit card" , "japan"],
    "homepage": "https://github.com/univapay/univapay-php-sdk",
    "license": "MIT",
    "require": {
        "php": ">=7.2",
        "rmccue/requests": "^2.0.1",
        "moneyphp/money": "^3.3.1|^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5.39",
        "squizlabs/php_codesniffer": "^3.6.2",
        "psy/psysh": "^0.11.2" 
    },
    "autoload": {
        "psr-0": {
            "Univapay": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/Univapay"
        ]
    },
    "config": {
        "platform": {
            "php": "7.2"
        }
    }
}
